#include <iostream>
using namespace std;

int main() {
    int totalSec;

    cout << "Masukkan bilangan >1 (satuan detik): ";
    cin >> totalSec;

    int day = totalSec / 86400; // 1 day = 86400 sec
    int remainSec = totalSec % 86400;

    int hour = remainSec / 3600;
    remainSec %= 3600;

    int min = remainSec / 60;
    int sec = remainSec % 60;

    cout << "\nHasil Konversi : " << endl;
    cout << totalSec << " Detik = "
         << day << " Hari, "
         << hour << " Jam, "
         << min << " Menit, "
         << sec << " Detik." << endl;



    return 0;


}
